<div class="panel panel-default">
  <div class="panel-heading">
    <%= @post.title %>
    <%= link_to @post.forum.name, forum_posts_path(@post.forum) %>
  </div>

  <div class="panel-body">
    <%= @post.content %><br>
    by
    <%= @post.user.try(:name) %>
    <hr>
    
    <%= render 'post_replies/reply', :post => @post %>
    <hr>

    <span>
      <span class="glyphicon glyphicon-tags"></span>
    </span>&nbsp
    <% @post.tags.each do |tag| %>
      <%= link_to "• #{tag.name}", posts_tag_path(tag) %>
    <% end %>

  </div>
  <div class="panel-footer">
    <%= link_to '新增標籤', new_post_tag_path(@post) %>
    <%= link_to '編輯', edit_post_path(@post) %>
    <%= link_to '刪除', fake_delete_post_path(@post), method: :put, :data => {confirm: "你確定嗎?"} %>
    <%#= link_to '真刪除', @post, method: :delete, :data => {:confirm => "你確定嗎?"} %>
  </div>
</div>

