<%= form_for @user, html: {class: "form-horizontal"} do |f| %>
  <div class="form-group">
    <%= image_tag @user.profile_picture.url(:medium) %><br>
    <%= f.file_field :profile_picture %>
  </div>
  <div class="form-group">
    <%= f.label :name, "帳號:", class: "col-sm-2 control-label" %>
    <%= f.text_field :name, class: "col-sm-10" %>
  </div>
  <div class="form-group">
    <%= f.label :about, "簡介:", class: "col-sm-2 control-label" %>
    <%= f.text_area :about, class: "col-sm-10" %>
  </div>
  <div class="form-group">
    <%= f.label :email, "電子信箱:", class: "col-sm-2 control-label" %>
    <%= f.text_field :email, class: "col-sm-10" %>
  </div>
  <div class="form-group">
    <%= f.label :password, "密碼:", class: "col-sm-2 control-label" %>
    <%= f.password_field :password, class: "col-sm-10" %>
  </div>
  <div class="form-group">
    <%= f.label :password_confirmation, "確認密碼:", class: "col-sm-2 control-label" %>
    <%= f.password_field :password_confirmation, class: "col-sm-10" %>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit "送出", class: "btn btn-default" %>
      <%= button_to '取消', :back, class: "btn btn-default" %>
    </div>
  </div>
<% end %>
